    ViewBag.Title = "RegistroCitas";
    Layout = "~/Views/Shared/_Layout-Cita.cshtml";

    string fechaActual = " " + System.DateTime.Now.ToString("dd/MM/yyyy");
    string fechaActualf = " " + System.DateTime.Now.ToString("dd/MM/yyyy");

